<div class='page'>
  <div class='page_content'>
    <div class="page_block">
      <header class='header row g-0'>
        <div class='col-3'>
         {{> logo}}
        </div>
        <nav class='header_nav col-9'><div class="header_nav_right">{{> nav list=header}}</div>
           {{!-- {{> nav list=header isVertical=true}} --}}
        </nav>
      </header>
      {{> divider}}
    </div>
    <div class="page_block">
      <div class="hero">{{> hero title=hero.title text=hero.text}}
        {{#with hero}}
      <a class="button" href="{{button.url}}">{{button.text}}</a>
      {{/with}}
    </div>   
    </div>
    <div class="page_block">
      <div class="row g-4">
        {{#each preview}}
        <div class="col-6">
        {{> cardPreview data=this}}
        </div>
        {{/each}}
      </div>
    </div>
    <div class="page_block">
      <main class="main">
        <div class="row g-0">
          <div class="list_header">
            <div class="row">
              <div class="col-6">
                <h2 class="list_title">List of post</h2>
              </div>
              <div class="col-6">
                <div class="list_category">
                  {{#each categories}}
                  <button class="categories_btn">{{text}}</button>
                  {{/each}}
                </div>
              </div>
            </div>
          </div>
          <div class="col-7">
              <div class="list">
                {{#each news}}
              {{> cardPost data=this}}
              {{/each}}
            </div>  
          </div>
          <div class="col-5">
            <aside class="list_aside">
              <div class="about">
                <h4 class="about_title">About</h4>
                <p class="about_info">{{about}}</p>
              </div>
              {{> linkList data=archive title="Archives"}}
              {{> linkList data=social title="Social"}}
              </aside>
          </div>
        </div>
      </main>
    </div>
      <div class="page_block">
    {{> divider}}
    <footer class="footer row">
      <div class="col-3">
        {{> logo}}
        <span class="footer_copyright">Copyright 2023</span>
      </div>
      {{#each footer}}
      <div class="col-3"><span class="footer_title">{{title}}</span>
      {{> nav list=links isVertical=true}}
      </div>
      {{/each}}
    </footer>
   </div> 

  </div>
</div>